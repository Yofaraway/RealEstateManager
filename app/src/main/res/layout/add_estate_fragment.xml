<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.openclassrooms.realestatemanager.ui.addestate.AddEstateViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_margin"
        tools:context=".ui.addestate.AddEstateFragment_todelete">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_estate_type"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_estate_type"
                    app:enableError="@{viewmodel.showError}"
                    app:errorText="@{@string/add_estate_missing_field}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:rule="@{viewmodel.type.empty || viewmodel.type == null}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_home_black_24dp"
                        android:drawablePadding="@dimen/default_margin"
                        android:inputType="text"
                        android:text="@={viewmodel.type}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_estate_surface"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_estate_surface"
                    app:enableError="@{viewmodel.showError}"
                    app:errorText="@{@string/add_estate_missing_field}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_estate_type"
                    app:layout_constraintWidth_percent="0.49"
                    app:rule="@{viewmodel.surface.empty || viewmodel.surface == null}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_border_style_black_24dp"
                        android:drawablePadding="@dimen/default_margin"
                        android:inputType="number"
                        android:text="@={viewmodel.surface}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_estate_price"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_estate_price"
                    app:enableError="@{viewmodel.showError}"
                    app:errorText="@{@string/add_estate_missing_field}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_estate_type"
                    app:layout_constraintWidth_percent="0.49"
                    app:rule="@{viewmodel.price.empty || viewmodel.price == null}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_attach_money_black_24dp"
                        android:drawablePadding="@dimen/default_margin"
                        android:inputType="number"
                        android:text="@={viewmodel.price}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_estate_rooms"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_estate_rooms"
                    app:enableError="@{viewmodel.showError}"
                    app:errorText="@{@string/add_estate_missing_field}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_estate_surface"
                    app:layout_constraintWidth_percent="0.32"
                    app:rule="@{viewmodel.rooms.empty || viewmodel.rooms == null}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_weekend_black_24dp"
                        android:drawablePadding="@dimen/default_margin"
                        android:inputType="number"
                        android:text="@={viewmodel.rooms}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_estate_bathrooms"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_estate_bathrooms"
                    app:enableError="@{viewmodel.showError}"
                    app:errorText="@{@string/add_estate_missing_field}"
                    app:layout_constraintEnd_toStartOf="@id/add_estate_bedrooms"
                    app:layout_constraintStart_toEndOf="@id/add_estate_rooms"
                    app:layout_constraintTop_toBottomOf="@id/add_estate_surface"
                    app:layout_constraintWidth_percent="0.32"
                    app:rule="@{viewmodel.bathrooms.empty || viewmodel.bathrooms == null}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_bathtub_24px"
                        android:drawablePadding="@dimen/default_margin"
                        android:inputType="number"
                        android:text="@={viewmodel.bathrooms}" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_estate_bedrooms"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_estate_bedrooms"
                    app:enableError="@{viewmodel.showError}"
                    app:errorText="@{@string/add_estate_missing_field}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_estate_surface"
                    app:layout_constraintWidth_percent="0.32"
                    app:rule="@{viewmodel.bedrooms.empty || viewmodel.bedrooms == null}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_hotel_black_24dp"
                        android:drawablePadding="@dimen/default_margin"
                        android:inputType="number"
                        android:text="@={viewmodel.bedrooms}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_estate_address"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_estate_address"
                    app:enableError="@{viewmodel.showError}"
                    app:errorText="@{@string/add_estate_missing_field}"
                    app:layout_constraintTop_toBottomOf="@id/add_estate_rooms"
                    app:rule="@{viewmodel.address.empty || viewmodel.address == null}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_place_black_24dp"
                        android:drawablePadding="@dimen/default_margin"
                        android:inputType="text"
                        android:text="@={viewmodel.address}" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/add_estate_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_estate_status"
                    android:textSize="@dimen/default_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_estate_address" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/add_estate_status_spn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:entries="@array/status"
                    app:layout_constraintBottom_toTopOf="@id/add_estate_date_available"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:setOnItemSelectedListener="@{viewmodel.onStatusSelected}" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_estate_date_available"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:hint="@string/add_estate_date_for_sale"
                    app:enableError="@{viewmodel.showError}"
                    app:errorText="@{@string/add_estate_missing_field}"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_estate_status_tv"
                    app:layout_constraintWidth_percent="0.49"
                    app:rule="@{viewmodel.dateAvailable.empty || viewmodel.dateAvailable == null}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_date_range_black_24dp"
                        android:drawablePadding="@dimen/default_margin"
                        android:focusableInTouchMode="false"
                        android:inputType="none"
                        android:onClick="@{()->viewmodel.onDateAvailableClick()}"
                        android:text="@={viewmodel.dateAvailable}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_estate_date_sold"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:hint="@string/add_estate_date_sold"
                    android:visibility="@{viewmodel.hasBeenSold ? View.VISIBLE : View.GONE, default=gone}"
                    app:enableError="@{viewmodel.showError}"
                    app:errorText="@{@string/add_estate_missing_field}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_estate_status_tv"
                    app:layout_constraintWidth_percent="0.49"
                    app:rule="@{viewmodel.dateSold.empty || viewmodel.dateSold == null}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_date_range_black_24dp"
                        android:drawablePadding="@dimen/default_margin"
                        android:focusableInTouchMode="false"
                        android:inputType="none"
                        android:onClick="@{()->viewmodel.onDateSoldClick()}"
                        android:text="@={viewmodel.dateSold}" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_estate_agent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_estate_agent"
                    app:enableError="@{viewmodel.showError}"
                    app:errorText="@{@string/add_estate_missing_field}"
                    app:layout_constraintTop_toBottomOf="@id/add_estate_date_available"
                    app:rule="@{viewmodel.agent.empty || viewmodel.agent == null}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_person_black_24dp"
                        android:drawablePadding="@dimen/default_margin"
                        android:inputType="text"
                        android:text="@={viewmodel.agent}" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_estate_description"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_estate_description"
                    app:enableError="@{viewmodel.showError}"
                    app:errorText="@{@string/add_estate_missing_field}"
                    app:layout_constraintTop_toBottomOf="@id/add_estate_agent"
                    app:rule="@{viewmodel.description.empty || viewmodel.description == null}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/default_margin"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:maxLines="10"
                        android:minLines="5"
                        android:text="@={viewmodel.description}" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_the_estate_confirm_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> viewmodel.onAddBtnClick()}"
                    android:text="@string/add_estate_confirm"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_estate_description" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>