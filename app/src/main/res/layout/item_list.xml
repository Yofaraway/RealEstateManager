<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white">

        <ImageView
            android:contentDescription="@string/img_bg"
            android:id="@+id/item_list_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/lowTransparentWhite"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_large"
                android:paddingTop="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingBottom="@dimen/spacing_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/item_list_type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="14"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        tools:text="Appartement AAAAAAAAAAAAAA" />

                    <TextView

                        android:id="@+id/item_list_price_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:maxLength="12"
                        android:textColor="@color/secondaryColor"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        tools:text="$290,735,000,000" />

                </LinearLayout>

                <TextView
                    android:id="@+id/item_list_place_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    tools:text="Manhattan Manhattan Manhattan Manhattan Manhattan Manhattan ManhattanManhattan Manhattan" />


            </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>